{
  "name": "goomer-lista-rango",
  "version": "1.0.1",
  "description": "Desafio para Criar uma API RESTful capaz de gerenciar os restaurantes e os produtos do seu card√°pio",
  "author": "Wallyson Pablo",
  "license": "GPL-3.0-or-later",
  "repository": "github:wpaq/goomer-lista-rango",
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "check": "npx ncu --interactive --format group",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.ts",
    "test:integration": "npm test -- --watch -c jest-integration-config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "prepare": "husky install",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/infra/db/typeorm/helpers/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/infra/db/typeorm/helpers/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/infra/db/typeorm/helpers/data-source.ts",
    "migration:show:test": "typeorm-ts-node-commonjs migration:show -d src/infra/db/typeorm/helpers/data-source-test.ts",
    "migration:run:test": "typeorm-ts-node-commonjs migration:run -d src/infra/db/typeorm/helpers/data-source-test.ts",
    "migration:revert:test": "typeorm-ts-node-commonjs migration:revert -d src/infra/db/typeorm/helpers/data-source-test.ts",
    "migration:all": "npm run migration:run && npm run migration:run:test"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.11.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.6",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
